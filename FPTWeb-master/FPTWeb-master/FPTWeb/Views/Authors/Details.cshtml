@model FPTWeb.Data.Author
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Author</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AuthorName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AuthorName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AuthorEmail)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AuthorEmail)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AuthorPhoto)
        </dt>
        <dd class = "col-sm-10">
            @if (!string.IsNullOrEmpty(Model.AuthorPhoto))
            {
                <img src="/uploads/@Html.DisplayFor(model => model.AuthorPhoto)" alt="user" style="height: 300px">
            }
            else
            {
                <p>No image available</p>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Birthdate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Birthdate)
        </dd>
    </dl>
</div>

